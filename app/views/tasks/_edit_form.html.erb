<turbo-frame id="edit-task">
  <%= form_with model: @task, data: { action: "submit->task#update" }, class: "space-y-6 bg-white p-6 rounded-lg shadow-md" do |form| %>
    <div class="field">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, name: "task[title]", data: { task_target: "updatedTitle" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", value: task.title %>
      <span class="text-red-500 text-sm hidden mt-1" data-task-target="updatedTitleError">This field is required</span>
    </div>

    <div class="field">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, name: "task[description]", data: { task_target: "updatedDescription" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", value: task.description %>
      <span class="text-red-500 text-sm hidden mt-1" data-task-target="updatedDescriptionError">This field is required</span>
    </div>

    <div class="field">
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, options_for_select(["Incompleted", "Completed", "In Progress", "Halted"], task.status), {}, name: "task[status]", data: { task_target: "updatedStatus" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <span class="text-red-500 text-sm hidden mt-1" data-task-target="updatedStatusError">This field is required</span>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Save", class: "bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
    </div>
  <% end %>
</turbo-frame>